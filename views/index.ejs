<body>
  <!-- Navbar -->
  <nav class="navbar">
    <div class="navbar-logo-column">
      <a href="/hotels">
        <img src="/images/airnbn.png" alt="Airbnb Logo" class="logo-image" />
      </a>
    </div>
    <div class="search-container">
      <form class="search-form" action="/hotels/search" method="GET">
        <input
          class="form-control search-input"
          type="text"
          name="query"
          placeholder="Search destinations"
          required
        />
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass search-icon"></i> Search
        </button>
      </form>
    </div>
    <div class="links">
      <% if (!user) { %>
      <a href="/signup">Sign up</a>
      <a href="/login">Log in</a>
      <% } else { %>
      <a href="/hotels/new">Airbnb your home</a>
      <a href="/logout">Logout</a>
      <% } %>
    </div>
  </nav>

  <div id="listings-container" class="listings-container">
    <% hotels.forEach(function(hotel) { %>
      <div class="card" data-category="<%= hotel.category %>" onclick="window.location.href='/hotels/<%= hotel._id %>'">
        <img src="<%= hotel.image %>" alt="<%= hotel.title %>" />
        <h2><%= hotel.title %></h2>
        <p><%= hotel.description.substring(0, 100) %>...</p>
        <p><%= hotel.location %>, <%= hotel.country %></p>
        <p>â‚¹<%= hotel.price %>/night</p>
        <% if (user) { %>
        <div class="card-actions">
          <button onclick="editHotel('<%= hotel._id %>')" class="btn-edit">Edit</button>
          <form action="/hotels/delete/<%= hotel._id %>" method="POST" style="display:inline;">
            <button type="submit" class="btn-delete">Delete</button>
          </form>
        </div>
        <% } %>
      </div>
    <% }) %>
  </div>  
</body>
